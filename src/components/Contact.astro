---
import SocialMedia from "./SocialMedia.astro";
---

<section
  id="contact"
  class="flex flex-col justify-center items-center my-10"
  aria-labelledby="contact-heading"
>
  <div
    data-aos="fade-up"
    class="w-full flex flex-col justify-center items-center gap-10 motion-safe:animate-none"
  >
    <h2
      id="contact-heading"
      class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-cente"
    >
      Contacto
    </h2>

    <div
      class="bg-[#6669ff] rounded-full p-4 px-6 shadow-lg transition-transform duration-300 hover:scale-105 motion-reduce:transform-none"
    >
      <p
        class="text-2xl sm:text-3xl md:text-4xl font-extrabold text-center uppercase text-white"
      >
        ¡Escribime por acá!
      </p>
    </div>
    <div class="motion-safe:animate-bounce motion-reduce:animate-none">
      <img
        src="/images/backhand-index-pointing-down.svg"
        alt=""
        aria-hidden="true"
      />
    </div>
    <div
      class="flex-1 flex flex-col items-center justify-center gap-4 motion-safe:animate-none"
    >
      <SocialMedia />
    </div>
  </div>
</section>
