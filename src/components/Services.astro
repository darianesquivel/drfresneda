const services = [
  {
    title: "Lesiones Deportivas",
    description:
      "Tratamiento especializado para atletas y deportistas de todos los niveles.",
    icon: "🏃‍♂️",
  },
  {
    title: "Cirugía Ortopédica",
    description:
      "Procedimientos quirúrgicos mínimamente invasivos para una recuperación más rápida.",
    icon: "🔬",
  },
  {
    title: "Rehabilitación",
    description:
      "Programas personalizados de fisioterapia y recuperación funcional.",
    icon: "💪",
  },
  {
    title: "Medicina Deportiva",
    description:
      "Prevención y tratamiento integral para optimizar el rendimiento deportivo.",
    icon: "⚕️",
  },
  {
